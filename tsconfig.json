{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"]
		},
		"outDir": "build/dist",
		"types": [
			"@testing-library/jest-dom",
			"@testing-library/react",
			"jest",
			"node"
		],
		"module": "esnext",
		"target": "es5",
		"lib": ["es6", "dom", "esnext.asynciterable"],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react",
		"moduleResolution": "node",
		"rootDir": "src",
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"skipLibCheck": true
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", "build", "scripts", "webpack", "cypress"]
}
